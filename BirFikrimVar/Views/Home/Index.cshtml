@model List<IdeaDto>

@{
    var userId = Context.Session.GetInt32("UserId");
    bool isLoggedIn = userId.HasValue;
    ViewData["Title"] = "Home";
}

@if (!isLoggedIn)
{
    <div class="container py-5 text-center">
        <h1 class="display-4">Welcome to <span class="text-primary">BirFikrimVar</span></h1>
        <p class="lead mt-3">
            This is a platform where students can share their creative ideas, collaborate,
            and get feedback.
            To get started, please
            <a href="" >Login</a> or
            <a href="" >Register</a>.
        </p>

        <p class="text-muted mt-4">
            Once logged in, you’ll be able to post your own ideas and explore what others are working on.
        </p>
    </div>
}
else
{
    <h2 class="mb-4">Latest Ideas</h2>
    <div class="row">
        @if (Model != null && Model.Any())
        {
            foreach (var idea in Model)
            {
                <div class="col-md-6 mb-4">
                    @Html.Partial("_IdeaCard", idea)
                </div>
            }
        }
        else
        {
            <p>
                No ideas yet. Be the first to
                <a asp-controller="Ideas" asp-action="Create">post one!</a>
            </p>
        }
    </div>
}
