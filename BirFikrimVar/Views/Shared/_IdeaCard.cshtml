@model IdeaDto

<div class="card mb-4 shadow-sm border-0 rounded-3">
    <div class="card-body">
        <div class="d-flex align-items-center mb-3">
            <div class="rounded-circle bg-primary text-white d-flex justify-content-center align-items-center"
                 style="width:40px; height:40px; font-weight:bold;">
                @Model.AuthorName.Substring(0, 1).ToUpper()
            </div>
            <div class="ms-3">
                <h6 class="mb-0 fw-semibold">@Model.AuthorName</h6>
                <small class="text-muted">@Model.CreatedDate</small>
            </div>
        </div>

        <h5 class="fw-bold">@Model.Title</h5>
        <p class="mb-3">@Model.Content</p>

        <div class="d-flex justify-content-between align-items-center border-top pt-3">
            <div class="d-flex gap-4">
                <span class="text-muted small">👍 @Model.LikeCount</span>
                <span class="text-muted small">💬 @Model.CommentCount</span>
            </div>
            <a class="btn btn-sm btn-outline-primary"
               asp-controller="Ideas" asp-action="Details" asp-route-id="@Model.IdeaId">
                View Idea
            </a>
        </div>
    </div>
</div>
