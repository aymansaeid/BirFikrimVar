@model BirFikrimVar.Models.UserProfileDto

@{
    ViewData["Title"] = "My Profile";
}

<h2>@Model.User.FullName’s Profile</h2>
<p><strong>Email:</strong> @Model.User.Email</p>

<hr />

<h3>My Ideas</h3>

@if (!Model.Ideas.Any())
{
    <p>You haven’t posted any ideas yet.</p>
}
else
{
    <div class="row">
        @foreach (var idea in Model.Ideas)
        {
            <div class="col-md-6 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title">@idea.Title</h5>
                        <p class="card-text text-truncate">@idea.Content</p>
                        <small class="text-muted">
                            Posted @idea.CreatedDate?.ToString("g")
                        </small>
                        <div class="mt-3 d-flex justify-content-between">
                            <a asp-controller="Ideas" asp-action="Details" asp-route-id="@idea.IdeaId" class="btn btn-sm btn-primary">
                                View
                            </a>
                            <div>
                                <a asp-controller="Ideas" asp-action="Edit" asp-route-id="@idea.IdeaId" class="btn btn-sm btn-warning me-2">
                                    Edit
                                </a>
                                <form asp-controller="Ideas" asp-action="Delete" asp-route-id="@idea.IdeaId" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-danger"
                                            onclick="return confirm('Are you sure you want to delete this idea?');">
                                        Delete
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
