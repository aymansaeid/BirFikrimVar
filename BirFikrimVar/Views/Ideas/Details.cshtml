@model BirFikrimVar.Models.IdeaDetailsViewModel

@{
    ViewData["Title"] = "Idea Details";
}

<div class="container py-4">
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="d-flex align-items-center mb-3">
                <div class="rounded-circle bg-primary text-white d-flex justify-content-center align-items-center"
                     style="width:40px; height:40px; font-weight:bold;">
                    @(string.IsNullOrEmpty(Model.Idea.AuthorName) ? "?" : Model.Idea.AuthorName.Substring(0, 1).ToUpper())
                </div>
                <div class="ms-3">
                    <h6 class="mb-0 fw-semibold">
                        @(string.IsNullOrEmpty(Model.Idea.AuthorName) ? "Unknown" : Model.Idea.AuthorName)
                    </h6>
                    <small class="text-muted">@Model.Idea.CreatedDate?.ToString("g")</small>
                </div>
            </div>

            <h4 class="fw-bold">@Model.Idea.Title</h4>
            <p class="mb-3">@Model.Idea.Content</p>

            <form asp-controller="Likes" asp-action="ToggleLike" method="post" class="d-inline">
                <input type="hidden" name="ideaId" value="@Model.Idea.IdeaId" />
                @Html.AntiForgeryToken()
                <button type="submit"
                        class="btn btn-sm @(Model.UserLiked ? "btn-danger" : "btn-outline-primary")">
                    @(Model.UserLiked ? "👎 Unlike" : "👍 Like") (@Model.LikeCount)
                </button>
            </form>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <h5 class="mb-3">Comments</h5>

            @if (!Model.Comments.Any())
            {
                <p class="text-muted">No comments yet.</p>
            }
            else
            {
                <ul class="list-group list-group-flush">
                    @foreach (var comment in Model.Comments)
                    {
                        <li class="list-group-item">
                            <div class="d-flex justify-content-between align-items-start">
                                <div class="flex-grow-1">
                                    <strong>
                                        @(string.IsNullOrEmpty(comment.authorName) ? "Anonymous" : comment.authorName)
                                    </strong>

                                    <div id="comment-display-@comment.CommentId">
                                        <p class="mb-1">@comment.Content</p>
                                        <small class="text-muted">
                                            @comment.CreatedDate?.ToString("g")
                                        </small>
                                    </div>

                                    <form id="comment-edit-@comment.CommentId"
                                          asp-controller="Ideas"
                                          asp-action="EditComment"
                                          method="post"
                                          class="d-none mt-2">
                                        <input type="hidden" name="commentId" value="@comment.CommentId" />
                                        <div class="mb-2">
                                            <textarea name="content" class="form-control" rows="3" required>@comment.Content</textarea>
                                        </div>
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-primary">Save</button>
                                        <button type="button"
                                                class="btn btn-sm btn-secondary"
                                                onclick="toggleEdit(@comment.CommentId, false)">
                                            Cancel
                                        </button>
                                    </form>
                                </div>

                                @if (Context.Session.GetInt32("UserId") == comment.UserId)
                                {
                                    <div class="ms-2">
                                        <button type="button"
                                                class="btn btn-sm btn-outline-secondary"
                                                onclick="toggleEdit(@comment.CommentId, true)">
                                            ✏️
                                        </button>

                                        <form asp-controller="Ideas"
                                              asp-action="DeleteComment"
                                              method="post"
                                              class="d-inline"
                                              onsubmit="return confirm('Are you sure you want to delete this comment?')">
                                            <input type="hidden" name="commentId" value="@comment.CommentId" />
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-outline-danger">🗑️</button>
                                        </form>
                                    </div>
                                }
                            </div>
                        </li>
                    }
                </ul>
            }

            @if (Context.Session.GetInt32("UserId") != null)
            {
                <form asp-controller="Ideas" asp-action="AddComment" method="post" class="mt-3">
                    <input type="hidden" name="ideaId" value="@Model.Idea.IdeaId" />
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <textarea name="content" class="form-control" rows="3"
                              placeholder="Write a comment..." required></textarea>
                    </div>
                    <button type="submit" class="btn btn-success">Add Comment</button>
                </form>
            }
            else
            {
                <p class="mt-3">
                    <a asp-controller="Users" asp-action="Login">Login</a> to comment.
                </p>
            }
        </div>
    </div>
</div>

<script>
    function toggleEdit(commentId, showEdit) {
        const displayDiv = document.getElementById('comment-display-' + commentId);
        const editForm = document.getElementById('comment-edit-' + commentId);

        if (showEdit) {
            displayDiv.classList.add('d-none');
            editForm.classList.remove('d-none');
        } else {
            displayDiv.classList.remove('d-none');
            editForm.classList.add('d-none');
        }
    }
</script>
